{
  "name": "bottle-ui",
  "version": "0.1.0",
  "description": "React components library",
  "author": "Declan Deng",
  "private": false,
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "keywords": [
    "Component",
    "UI",
    "React"
  ],
  "homepage": "https://github.com/DeclanDeng/bottle-ui",
  "repository": {
    "type": "git",
    "url": "https://github.com/DeclanDeng/bottle-ui"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.30",
    "@fortawesome/free-solid-svg-icons": "^5.14.0",
    "@fortawesome/react-fontawesome": "^0.1.11",
    "axios": "^0.19.2",
    "classnames": "^2.2.6",
    "react-transition-group": "^4.4.1"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "clean": "rimraf ./dist",
    "lint": "eslint --ext js,ts,tsx src --max-warnings 5",
    "build": "yarn clean && yarn build-ts && yarn build-css",
    "test": "react-scripts test",
    "test:nowatch": "cross-env CI=true react-scripts test",
    "eject": "react-scripts eject",
    "build-ts": "tsc -p tsconfig.build.json",
    "build-css": "node-sass ./src/styles/index.scss ./dist/index.css",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public",
    "prepublishOnly": "yarn test:nowatch && yarn lint && yarn build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test:nowatch && yarn lint"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@storybook/addon-actions": "^6.0.6",
    "@storybook/addon-info": "^5.3.19",
    "@storybook/addon-links": "^6.0.6",
    "@storybook/addons": "^6.0.6",
    "@storybook/preset-create-react-app": "^3.1.4",
    "@storybook/react": "^6.0.6",
    "@testing-library/jest-dom": "^5.11.3",
    "@testing-library/react": "^10.4.8",
    "@testing-library/user-event": "^12.1.1",
    "@types/classnames": "^2.2.10",
    "@types/jest": "^26.0.9",
    "@types/node": "^14.0.27",
    "@types/react": "^16.9.46",
    "@types/react-dom": "^16.9.0",
    "@types/react-transition-group": "^4.4.0",
    "@types/storybook__addon-info": "^5.2.1",
    "cross-env": "^7.0.2",
    "husky": "^4.2.5",
    "node-sass": "^4.14.1",
    "react": "^16.13.1",
    "react-docgen-typescript-loader": "^3.7.2",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.3",
    "rimraf": "^3.0.2",
    "typescript": "~3.9.7"
  }
}
